---
import "@fontsource-variable/outfit";
import Header from "../components/home/Header.astro";
import Footer from "../components/common/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Launch your own free Minecraft server in seconds. Enjoy a server with generous specs. Made by nerds, for nerds." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/documentation/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div>
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
